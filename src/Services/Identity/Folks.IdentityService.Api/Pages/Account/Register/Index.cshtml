@page
@model Folks.IdentityService.Api.Pages.Account.Register.IndexModel

<link rel="stylesheet" href="~/@(Assembly.GetEntryAssembly()?.GetName().Name).styles.css" />

<div class="row vh-100 d-flex justify-content-center align-items-center">
    <div class="card col-lg-4 col-sm-12">
        <div class="card-body">
            <div class="d-flex flex-column align-content-center align-items-center">
                <img src="~/images/logo.svg" class="d-block mb-4" />
                <h3 class="fw-bold text-center mb-4">Create your account</h3>
            </div>

            <form method="post" id="register-form" novalidate>
                <div class="form-outline input-custom-mb">
                    <input type="text" class="form-control" asp-for="Input.UserName" autofocus required />
                    <label class="form-label" asp-for="Input.UserName">User Name</label>
                    <div class="invalid-tooltip" id="username-invalid-tooltip"></div>
                </div>

                <div class="form-outline input-custom-mb">
                    <input type="email" class="form-control" asp-for="Input.Email" autofocus required />
                    <label class="form-label" asp-for="Input.Email">Email</label>
                    <div class="invalid-tooltip" id="email-invalid-tooltip"></div>
                </div>

                <div class="form-outline input-custom-mb">
                    <input type="password" class="form-control" asp-for="Input.Password" autocomplete="off" required />
                    <label class="form-label" asp-for="Input.Password">Password</label>
                    <div class="invalid-tooltip" id="password-invalid-tooltip"></div>
                </div>

                <div class="form-outline input-custom-mb">
                    <input type="password" class="form-control" asp-for="Input.ConfirmPassword" autocomplete="off" required />
                    <label class="form-label" asp-for="Input.ConfirmPassword">Confirm password</label>
                    <div class="invalid-tooltip" id="confirm-password-invalid-tooltip"></div>
                </div>

                <div class="row mb-4">
                    <div class="col">
                        Already have an account? <a asp-page="/Account/Login/Index" asp-route-ReturnUrl="@Model.ReturnUrl">Sign in!</a>
                    </div>
                </div>

                <button type="submit" id="submit-btn" class="btn btn-primary btn-block text-capitalize" disabled>
                    Sign up
                </button>
            </form>

            <partial name="_ValidationSummary" />
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Pages/Account/Register/Index.cshtml.js"></script>
}
