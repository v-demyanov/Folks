{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/v1/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8001
        }
      ],
      "UpstreamPathTemplate": "/chatservice/{path}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT"
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityServerApiKey",
        "AllowedScopes": [
          "chatServiceApi"
        ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/v1/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8002
        }
      ],
      "UpstreamPathTemplate": "/identityservice/{path}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT"
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityServerApiKey",
        "AllowedScopes": [
          "IdentityServerApi"
        ]
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000"
  }
}
